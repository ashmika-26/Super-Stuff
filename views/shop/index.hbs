
<div class="row justify-content-center">
    <div class="message col-sm-6 col-md-6 col-md-offset-4 col-sm-offset-3"><div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
{{successMsg}}
</div></div>

</div>
    

{{#each products}}
    <div class = "row">
        {{#each this}}
            <div class = "col-sm-6 col-md-4">
                <div class="cards-container">
                    <figure class="card">
                        <div class="card__hero">
                            <img src="{{this.imagePath}}" alt="" class="card__img">
                        </div>
                        
                        <h2 class="card__name">{{this.title}}</h2>
                        <div class = "laptop__details">
                        <p class="card__detail">{{this.co}}</p>
                        <p class="card__detail">{{this.description}}</p>
                        </div>
                        <div class="laptop__description">
                            <p class="laptop__source">For more info: <a href="https://www.boxlunch.com/"
                             target="_blank">https://www.boxlunch.com/</a></p>
                        </div>
                        
                        
                        <div class="card__footer">
                            <p class="card__price">${{this.price}}</p>
                            <a href="/cart/{{this._id}}" class="card__link"><i class="fas fa-shopping-cart"></i>Add to Cart</a>
                        </div>
                    </figure>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}

