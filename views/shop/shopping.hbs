

   <center><h1>Shopping Bag</h1> </center>
 
{{#if products}}

    <div class ="row justify-content-center">
        <div class="shop col-sm-6 col-md-6 col-md-offset-5 col-sm-offset-5">
            <ul class = "list-group">
                {{#each products}}

                <li class="list-group-item">
                    <span class="badge badge-pill badge-success float-right m-2">{{this.qty}}</span>
                    <strong>{{this.item.title}}</strong>
                    <span class="label label-success">${{this.price}}</span>
                    <div class="btn-group">
                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/reduce/{{this.item._id}}"><i class="fas fa-minus-circle"></i> 1</a>
                                <a class="dropdown-item" href="/add/{{this.item._id}}"><i class="fas fa-plus-circle"></i> 1</a>
                                <a class="dropdown-item" href="/remove/{{this.item._id}}">Delete All</a>
                            </div>
                        
                    </div>
                </li>

                {{/each}}
                
            </ul>
        </div>
    </div>

    <div class ="row justify-content-center">
        <div class="shop col-sm-6 col-md-6 col-md-offset-5 col-sm-offset-5">
        <strong>Total: ${{totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class ="row justify-content-center">
        <div class="col-sm-6 col-md-6 col-md-offset-5 col-sm-offset-5">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>


{{else}}

    <div class ="row justify-content-center">
        <div class="shop col-sm-6 col-md-6 col-md-offset-5 col-sm-offset-5">
        <h2>No items to show in Cart,<a href="/"> Keep shopping!</a></h2>
        </div>
    </div>


{{/if}}


